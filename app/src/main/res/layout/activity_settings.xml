<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="#F5F5F5">

    <!-- Header -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_selection_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:layout_marginBottom="8dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/model_description"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <!-- Model Selection Card -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="24dp"
        android:elevation="2dp">

        <RadioGroup
            android:id="@+id/modelSelectionGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <RadioButton
                android:id="@+id/radioGpt4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/model_performance_high"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/radioGpt35"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/model_performance_balanced"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/radioClaude"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/model_performance_fast"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/radioPalm"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/model_performance_detailed"
                android:textSize="16sp"
                android:padding="12dp" />

            <RadioButton
                android:id="@+id/radioLlama"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/model_performance_standard"
                android:textSize="16sp"
                android:padding="12dp" />

        </RadioGroup>
    </androidx.cardview.widget.CardView>

    <!-- Save Button -->
    <Button
        android:id="@+id/saveButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/save_settings"
        android:textSize="16sp"
        android:padding="16dp"
        style="@style/Widget.AppCompat.Button.Colored" />

</LinearLayout>
